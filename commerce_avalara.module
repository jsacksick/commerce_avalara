/**
 * Access callback: determines access to the "Calculate Tax" local action.
 */
function commerce_avalara_order_admin_form_access($order) {
  $company_code = commerce_avalara_company_code();
  // Skip tax calculation if the option is disabled, or if the company code
  // is empty & skip cart orders.
  if (!variable_get(COMMERCE_AVALARA_VAR_PREFIX . 'tax_calculation_enabled', TRUE) || empty($company_code) || commerce_cart_order_is_cart($order)) {
    return FALSE;
  }

  if (empty($order->commerce_line_items)) {
    return FALSE;
  }

  return commerce_order_access('update', $order);
}

